{
  "name": "coDos",
  "displayName": "CodeToDo",
  "description": "Todo List extension for coding practise",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:coDos.helloWorld",
    "onCommand:coDos.askQuestion",
    "onCommand:coDos.refresh",
    "onCommand:coDos.addTodo",
    "onCommand:coDos.authenticate",
    "onView:coDos-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coDos-sidebar-view",
          "title": "coDos",
          "icon": "media/todo.svg"
        }
      ]
    },
    "views": {
      "coDos-sidebar-view": [
        {
          "type": "webview",
          "id": "coDos-sidebar",
          "name": "coDos",
          "icon": "media/todo.svg",
          "contextualTitle": "coDos"
        }
      ]
    },
    "commands": [
      {
        "command": "coDos.helloWorld",
        "category": "TODO",
        "title": "Hello World"
      },
      {
        "command": "coDos.askQuestion",
        "category": "TODO",
        "title": "question"
      },
      {
        "command": "coDos.refresh",
        "category": "TODO",
        "title": "Refresh"
      },
      {
        "command": "coDos.addTodo",
        "category": "TODO",
        "title": "Add Todo from selection"
      },
      {
        "command": "coDos.authenticate",
        "category": "TODO",
        "title": "Authenticate"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/polka": "^0.5.2",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "rollup": "^2.41.0",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.49.0",
    "svelte-check": "^1.2.2",
    "svelte-preprocess": "^4.6.9",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
